<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/card_view_thread"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:id="@+id/imageThreadItem"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/add_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleThreadItem"
            android:textSize="16dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Thread title here ..."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionThreadItem"
            android:padding="10dp"
            android:textSize="14dp"
            android:text="Thread description here"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userThreadItem"
            android:padding="10dp"
            android:textStyle="italic"
            android:textSize="12dp"
            android:text="By"/>

        <!--<ImageButton-->
            <!--android:id="@+id/imageButtonLike"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:background="#00ffffff"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_gravity="right"-->
            <!--app:srcCompat="@drawable/ic_thumb_black" />-->

    </LinearLayout>

</android.support.v7.widget.CardView>